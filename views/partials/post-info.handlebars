<div class="card mb-6">
  <header class="card-header card-header-title color">
    
        <div class="column">
            <p class=" has-text-primary-light"></p>
      <a href="/post/{{id}}"  class="color is-capitalized is-pulled-left">{{title}} </a></p>
      </div>
      <div class="column">
           <div class="is-pulled-right">
                <b>{{user.username}}</b>
                 | {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content has-text-justified">
            {{post_content}}
        </div>
            
        
    </div>